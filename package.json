{
  "name": "koa2-react-ssr-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for building SSR(server-side rendering) web with React & Redux & Koa2 & Less, supporting hot module reload",
  "scripts": {
    "start": "npm run build && NODE_ENV=production nodemon bin/production.js",
    "build": "NODE_ENV=production npm run clean && webpack --config webpack.production.config.js",
    "dev": "NODE_ENV=development nodemon ./bin/development.js --watch server --watch bin",
    "clean": "rm -rf public/build/ && rm -rf dist/",
    "precommit": "npm run lint-staged",
    "lint-staged": "lint-staged",
    "lint:styles": "stylelint \"client/**/*.less\" --syntax less",
    "lint": "eslint --ext .js client/ server/",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "author": "信鑫-King",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ycjcl868/koa2-react-ssr-boilerplate.git"
  },
  "lint-staged": {
    "client/**/*.js": "npm run lint",
    "server/**/*.js": "npm run lint",
    "**/*.less": "stylelint --syntax less"
  },
  "devDependencies": {
    "asset-require-hook": "^1.0.2",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-inline-replace-variables": "^1.1.2",
    "babel-plugin-transform-require-ignore": "0.0.2",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "husky": "^0.14.3",
    "json-loader": "^0.5.4",
    "koa-webpack-middleware": "^1.0.3",
    "less": "^3.0.1",
    "less-loader": "^4.0.5",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.11.0",
    "null-loader": "^0.1.1",
    "progress-bar-webpack-plugin": "^1.9.2",
    "style-loader": "^0.13.1",
    "stylelint": "^9.1.0",
    "stylelint-config-standard": "^18.1.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.0",
    "koa-onerror": "^3.0.1",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "koa-views": "^5.2.0",
    "nunjucks": "^3.1.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "snyk": "^1.316.1"
  },
  "snyk": true
}
